<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="user">
	<insert id="u_insert" parameterType="dto.UserDTO">
		insert into kh_user
		values(#{id},#{upass},#{uname},#{uemail},#{uphone},#{uaddr},#{udate},#{ugender})
	</insert>
 
	<!-- <select id="u_list" parameterType="int" resultType="dto.UserDTO">
		select * from
		tbl_reply where bno=#{bno} order by rno desc
	</select> -->
	
	<delete id="u_delete" parameterType="string" >
	  delete from kh_user
	  where id=#{id}
	</delete>
	
	<update id="u_update" parameterType="dto.UserDTO">
	  update kh_user set uphone=#{uphone}
	  where  id=#{id}
	</update>

</mapper>   











